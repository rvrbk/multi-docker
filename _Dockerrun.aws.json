{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [{
        "name": "client",
        "image": "rvrbk/multi-client",
        "hostname": "client",
        "essential": false
    }, {
        "name": "server",
        "image": "rvrbk/multi-server",
        "hostname": "api",
        "essential": false
    }, {
        "name": "worker",
        "image": "rvrbk/multi-worker",
        "essential": false 
    }, {
        "name": "nginx",
        "image": "rvrbk/multi-nginx",
        "essential": true,
        "portMappings": [{
            "hostPort": 80,
            "containerPort": 80
        }],
        "links": ["client", "server"]
    }]
}